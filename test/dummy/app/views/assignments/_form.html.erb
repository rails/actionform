<%= form_for @assignment_form do |f| %>
  <% if @assignment_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assignment_form.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @assignment_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <h2>Tasks Details</h2>

  <%= render_association_template(f, :tasks) %>
  <div class="task_list">
    <%= f.fields_for :tasks do |task_fields| %>
      <%= render "task_fields", :f => task_fields %>
    <% end %>
  </div>

  <div class="links">
    <%= link_to_add_association "Add a Task", f, :tasks, { data: {"association-insertion-node" => ".task_list"} } %>
  </div>

  <!-- $(".task_list").addFormField("tasks") -->
  <!-- $(".task_list").removeFormField("tasks", 2) -->

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
